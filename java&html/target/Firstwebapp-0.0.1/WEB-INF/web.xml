<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<display-name>My First Web Application</display-name>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>MainServices</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>jersey.config.server.provider.classnames</param-name>
			<param-value>pt.unl.fct.di.apdc.firstwebapp.filters.AdditionalResponseHeadersFilter</param-value>
		</init-param>
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>pt.unl.fct.di.apdc.firstwebapp.resources</param-value>
		</init-param>
		<init-param>
			<param-name>jersey.config.server.provider.scanning.recursive</param-name>
			<param-value>false</param-value>
		</init-param>
		<init-param>
			<param-name>jersey.config.servlet.filter.contextPath</param-name>
			<param-value>/rest/*</param-value>
		</init-param>
		<init-param>
			<param-name>jersey.config.server.tracing.type</param-name>
			<param-value>ALL</param-value> <!-- This is a debug utility that should be disabled when code goes to production -->
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>PostServlet</servlet-name>
		<servlet-class>pt.unl.fct.di.apdc.firstwebapp.resources.PostServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>FeedServlet</servlet-name>
		<servlet-class>pt.unl.fct.di.apdc.firstwebapp.resources.FeedServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>NewsServlet</servlet-name>
		<servlet-class>pt.unl.fct.di.apdc.firstwebapp.resources.NewsServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EventsServlet</servlet-name>
		<servlet-class>pt.unl.fct.di.apdc.firstwebapp.resources.EventsServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>PostServlet</servlet-name>
		<url-pattern>/rest/post/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FeedServlet</servlet-name>
		<url-pattern>/rest/feed/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>NewsServlet</servlet-name>
		<url-pattern>/rest/news/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EventsServlet</servlet-name>
		<url-pattern>/rest/events/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MainServices</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>

</web-app>